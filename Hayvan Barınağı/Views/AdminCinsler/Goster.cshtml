@model List<Hayvan_Barınağı.Models.Hayvan.Cins>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Cinsleri Göster - Admin
        </h1>

    </div>
</div>


<div class="container py-5">

    @{
        if (Model != null && Model.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Cins Adı</th>
                        <th scope="col"> </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var Cins in Model)
                    {
                        <tr>
                            <td>@Cins.CinsId</td>
                            <td>@Cins.CinsAdi</td>

                            <td>
                                <a class="btn btn-info"
                       asp-area=""
                       asp-controller="AdminCinsler"
                       asp-action="Duzenle"
                       asp-route-CinsId="@Cins.CinsId">
                                    Düzenle
                                </a>
                            </td>


                            <td>
                                <a class="btn btn-danger"
                       asp-area=""
                       asp-controller="AdminCinsler"
                       asp-action="Sil"
                       asp-route-CinsId="@Cins.CinsId">
                                    Sil
                                </a>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> Kayıtlı Cins bulunamadı</p>
        }
    }

</div>
