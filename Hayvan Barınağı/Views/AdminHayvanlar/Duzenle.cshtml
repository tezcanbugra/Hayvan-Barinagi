@model Hayvan_Barınağı.Models.ViewModels.HayvanDuzenleRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Hayvan Düzenle - Admin
        </h1>

    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">

                <label class="form-label">
                    Hayvan ID
                </label>

                <input type="text" id="HayvanId" class="form-control" asp-for="HayvanId" readonly />

            </div>
            <div class="mb-3">

                <label class="form-label">
                    Hayvan Adı
                </label>

                <input type="text" id="HayvanAdi" class="form-control" asp-for="HayvanAdi" />
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="Onay" asp-for="Onay">
                <label class="form-check-label">
                    Onaylandı mı?
                </label>

            </div>


            <div class="mb-3">
                <div class=" d-flex">
                    <button type="submit" class="btn btn-dark"> Kaydet</button>
                    <button class="btn btn-danger ms-2" type="submit"
                        asp-area=""
                        asp-controller="AdminHayvanlar"
                        asp-action="Sil">
                        Sil
                    </button>
                </div>
            </div>


        </form>

    }
    else
    {
        <p> Hayvan Bulunamadı.</p>
    }
</div>
